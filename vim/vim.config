filetype on
filetype plugin on
filetype indent on

set autoread

set smartcase
set hlsearch
set incsearch


" Editor Settings
syntax enable
set number
set ruler

" Matching brackets
set showmatch
set mat=2

" Use spaces instead of tabs
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

autocmd FileType make set noexpandtab shiftwidth=8 softtabstop=0


" Set Buffer size, so we can yank loads.
set viminfo='20,<1000

